<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added dev data
    -->
    <changeSet id="20190218190600-1" author="joshvindomingo" context="dev">
    	<!-- Annexes -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/annexes.csv"
                  separator=";"
                  tableName="krptn_annex">
        </loadData>
        
        <!-- Recommendations -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/recommendations.csv"
                  separator=";"
                  tableName="krptn_recommendation">
        </loadData>
        
        <!-- Questions -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/questions.csv"
                  separator=";"
                  tableName="krptn_question">
        </loadData>
        
    </changeSet>
    
    
    <changeSet id="20190218190600-2" author="joshvindomingo" context="dev">
        <!-- Answers -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/answers.csv"
                  separator=";"
                  tableName="krptn_answer">
                  annex_id;recommendation_id;next_question_id;question_id
	        <column name="annex_id"  type="numeric"/>
	        <column name="recommendation_id" type="numeric"/>
	        <column name="next_question_id"  type="numeric"/>
	        <column name="question_id" type="numeric"/>
        </loadData>
        
        
        <!-- Module -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/modules.csv"
                  separator=";"
                  tableName="krptn_module">
        </loadData>
        
    </changeSet>
    
    
    <changeSet id="20190218190600-3" author="joshvindomingo" context="dev">
                
        <!-- Module questions -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/module_questions.csv"
                  separator=";"
                  tableName="krptn_module_questions">
        </loadData>
        
        
        <!-- Module recommendations -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/module_recommendations.csv"
                  separator=";"
                  tableName="krptn_module_recommendations">
        </loadData>
        
        
        <!-- Module annexes -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/dev/module_annexes.csv"
                  separator=";"
                  tableName="krptn_module_annexes">
        </loadData>
    </changeSet>
    
    
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
